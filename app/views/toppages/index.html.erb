<%# TOP %>

<div class="container">
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the ***</h1>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-6 mt-3">
      <div class="card">
        <div class="card-header text-center">
          <h3 class="card-title">ABOUT</h3>
        </div>
        <div class="card-body">
          <img src="/assets/logo.png" class="img-fluid" alt="">
          <p class="card-title">test</p>
          <p class="card-title">test</p>
          <p class="card-title">test</p>
        </div>
      </div>
    </div>
    <div class="col-sm-6 mt-3">
      <div class="card">
        <div class="card-header text-center">
          <h3 class="card-title">ONLINE STORE</h3>
        </div>
        <div class="card-body">
          <img src="/assets/store_top.jpg" class="img-fluid" alt="">
          <p class="card-title">test</p>
          <p class="card-title">test</p>
          <p class="card-title">test</p>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row mt-3 col-sm-10 mx-auto">
    <div class="mt-3">
      <h3 class="mx-auto">NEWS</h3>
    </div>
        
    <ul>
      <% @posts.each do |post| %>
        <li class="media mb-3">
          <div>
          <%= link_to post.id, post %> : <%= post.title %> <span class="text-muted">posted at <%= post.created_at %></span>
          </div>
          <div>
          <%= post.text %>
          </div>
        </li>
      <% end %>
      <%= paginate @posts %>
    </ul>

  </div>
  
  <div class="row mt-3 col-sm-10">
      <h3 class="mx-auto">SNS</h3>
  </div>
      
  <div class="row mt-3 col-sm-10">
      <h3 class="mx-auto">CONTACT</h3>
  </div>
</div>
